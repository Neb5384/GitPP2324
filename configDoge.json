{
    "logging": {
        // Nom du fichier dans lequel les logs seront écrits
        "filename": "apps.log",
        
        // Mode d'ouverture du fichier de log (w pour écriture, a pour ajout)
        "filemode": "w",
        
        // Format des messages de log, incluant le nom du logger, le niveau de log et le message
        "format": "%(name)s - %(levelname)s - %(message)s",
        
        // Niveau de log minimum (DEBUG, INFO, WARNING, ERROR, CRITICAL)
        "level": "INFO"
    },
    "scheduler": {
        // Intervalle de temps (en secondes) pour le scheduler
        "interval": 2.3
    },
    "flask": {
        // Adresse hôte sur laquelle l'application Flask écoute
        "host": "0.0.0.0",
        
        // Port sur lequel l'application Flask écoute
